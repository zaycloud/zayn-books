{
  "name": "zayn-books",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && npm start",
    "build": "vite build",
    "lint": "eslint src/",
    "lint:backend": "cd backend && npm run lint",
    "lint:all": "npm run lint && npm run lint:backend",
    "security": "npm audit --audit-level=moderate",
    "security:backend": "cd backend && npm audit --audit-level=moderate",
    "security:all": "npm run security && npm run security:backend",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cd backend && npm test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:api": "npx newman run tests-api/collection.json --reporters cli",
    "preview": "vite preview --port 5173"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "vite": "^7.3.0"
  }
}
